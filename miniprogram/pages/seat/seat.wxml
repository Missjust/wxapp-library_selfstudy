<!--pages/seat/seat.wxml-->

<!-- 显示状态 -->
<view class='circle'>
  <circle degree="{{status[currentStatus].color}}" obvious="{{status[currentStatus].name}}"></circle>
  <!-- <image style="width: 200px; height: 200px;" mode="aspectFit" src="/miniprogram/images/circle_green.png"></image> -->
</view>


<view class="button">
  <button   class="weui-btn weui-btn_primary" disabled = "{{sitDisable}}"     bindtap="Sit"   >就坐</button>
  <button   class="weui-btn weui-btn_primary" disabled = "{{leaveDisable}}"   bindtap="Leave" >暂离</button>
  <button   class="weui-btn weui-btn_primary" disabled = "{{endDisable}}"     bindtap="End"   >结束</button>
</view>



