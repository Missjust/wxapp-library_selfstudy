<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">举报信息</h2>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">
		
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                
								<picker class="" range="{{accuseSelectNum}}">
								举报桌号
								</picker>

            </view>
        </view>
				 <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                
						 <view class="weui-cell__hd">具体情况</view>
			    

            </view>
        </view>
				<view class="weui-cells weui-cells_form">
				        	<view class="weui-cell ">
						        <view class="weui-cell__bd">
							        <textarea class="weui-textarea" placeholder="请描述你所发生的问题" rows="3"></textarea>
						        </view>
					        </view>
				        </view>

				  
     	<view class="inputimg">
     	<button  size="mini"  class="weui-btn" type="primary" plain="true" open-type="uploadImage"     bindtap="uploadImage"> 上传图片 </button>
       </view>
     
     	<view class="uploadImage">
       <image  style="width: 200px; height: 150px; background-color: #eeeeee;" mode="aspectFit" src="{{imageSrc}}"></image>
      </view>
				
			</view>	
   </view>
</view>


		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary" bindtap="submit">确定</a>
		</view>
		
		
		
		<view class="weui-form__extra-area">
			<view class="weui-footer">
				<view class="weui-footer__links">
					<a href="javascript:" class="weui-footer__link">小提示</a>
				</view>
				<view class="weui-footer__text">带走你的书籍</view>
			</view>
		</view>
	
	
	</view>
</view>