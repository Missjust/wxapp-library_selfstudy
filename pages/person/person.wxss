/* pages/person/person.wxss */
page {
  padding-bottom: 20px;
}

.collapse__header {
  background-color: #FFBF00 !important;
  color: #FFF !important;
  border-top: none !important;
}

collapse .ui-card {
  padding: 15px;
}
collapse .ui-card:before {
  display: none;
}

.icon {
  margin-right: 5px;
  vertical-align: middle;
  width:20px; 
  height: 20px;
}

.user-info__avatar {
  width: 64px; 
  height: 64px;
  margin-right: 15px;
  vertical-align: middle;
  border-radius: 32px;
  overflow: hidden;
}

.user-info__name {
  margin-bottom: 12rpx;
}

.bun1{
  width: 340rpx;
    padding: 0 25px;
    height: 48px;
    border: 1px solid #f2f2f2;
    background-color: lightskyblue;
    color: #202124;
    font-size: 14px;
    line-height: 48px;
    border-radius: 25px;
}